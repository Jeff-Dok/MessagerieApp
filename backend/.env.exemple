# =========================================
# CONFIGURATION SERVEUR
# =========================================
NODE_ENV=development
PORT=5000
HOST=localhost

# =========================================
# BASE DE DONNÉES POSTGRESQL
# =========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=messagerie_db
DB_USER=postgres
DB_PASSWORD=votre_mot_de_passe_securise

# =========================================
# SÉCURITÉ JWT
# =========================================
# IMPORTANT: Changez cette clé en production
JWT_SECRET=super_secret_key_changez_moi_en_production_123456789
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =========================================
# CORS ET ORIGINES AUTORISÉES
# =========================================
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =========================================
# LIMITATION DE REQUÊTES
# =========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =========================================
# UPLOAD D'IMAGES
# =========================================
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,gif,webp

# =========================================
# EXPIRATION DES IMAGES (en minutes)
# =========================================
IMAGE_EXPIRATION_TIME=5
CLEANUP_INTERVAL=1

# =========================================
# LOGS
# =========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# =========================================
# SOCKET.IO
# =========================================
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000