{
  "name": "messagerie-backend",
  "version": "3.0.0",
  "description": "Backend optimisé avec système de profils étendus et validation admin",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:init": "psql -U postgres -f database/init.sql",
    "db:seed": "psql -U postgres -d messagerie_db -f database/seed.sql",
    "db:migrate": "psql -U postgres -d messagerie_db -f database/migration_profiles.sql",
    "db:reset": "npm run db:init && npm run db:migrate && npm run db:seed",
    "test": "jest --coverage",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.js\""
  },
  "keywords": [
    "messaging",
    "express",
    "postgresql",
    "socket.io",
    "jwt",
    "profiles",
    "admin-panel"
  ],
  "author": "MessagerieApp Team",
  "license": "MIT",
  "dependencies": {
    "express": "^5.2.1",
    "pg": "^8.17.2",
    "sequelize": "^6.37.7",
    "bcryptjs": "^3.0.3",
    "jsonwebtoken": "^9.0.3",
    "dotenv": "^17.2.3",
    "cors": "^2.8.5",
    "express-validator": "^7.3.1",
    "morgan": "^1.10.1",
    "socket.io": "^4.8.3",
    "multer": "^2.0.2",
    "sharp": "^0.34.5",
    "helmet": "^8.1.0",
    "compression": "^1.8.1",
    "express-rate-limit": "^8.2.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.11",
    "eslint": "^9.39.2",
    "prettier": "^3.8.0",
    "jest": "^30.2.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}